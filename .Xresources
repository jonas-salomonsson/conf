! Xft settings
Xft.dpi:		96
Xft.antialias:		true
Xft.rgba:		rgb
Xft.hinting:		true
Xft.hintstyle:		hintslight
Xft.autohint:		0
Xft.lcdfilter:		lcddefault

! URxvt settings
URxvt.depth:		32
URxvt.geometry:		120x30
URxvt.saveLines:	1000
URxvt.transparent:	true
URxvt.shading:		18
URxvt.fading:		50
URxvt.fadeColor:	#cccccc
URxvt.dynamicColors:	on
URxvt.lineSpace:	0
URxvt.internalBorder:	3

! Fonts
!*allow_bold:	true
!*font: xft: Adobe Helvetica: style=Regular: pixelsize=12
!*font: xft: DejaVu Sans: style=Black, Regular: pixelsize=12
!*boldFont: xft: DejaVu Sans: style=Book: pixelsize=14
URxvt.font:		xft:DejavuSansMono:pixelsize=14
! Fix font space
!*letterSpace: -3

! Colors in manuals
URxvt.colorIT:		#87af5f
URxvt.colorBD:		#d7d7d7
URxvt.colorUL:		#87afd7

! Pointer
URxvt.pointerBlank:	true

! Scrollbar
URxvt.scrollStyle:	rxvt
URxvt.scrollBar:	false

! Perl extensions
URxvt.perl-ext-common:	default,matcher,tabbedex,resize-font
URxvt.url-launcher:	firefox
URxvt.matcher.button:	1
URxvt.matcher.rend.0:	Uline Bold fg5

! URxvt colors
URxvt.foreground:   #ebebeb
URxvt.background:   #222222
URxvt.cursorColor:  #ebebeb
URxvt.color0:       #222222
URxvt.color8:       #111111
URxvt.color1:       #eb0000
URxvt.color9:       #ab0000
URxvt.color2:       #aaeb00
URxvt.color10:      #66aa00
URxvt.color3:       #eebb00
URxvt.color11:      #aa7700
URxvt.color4:       #00aaeb
URxvt.color12:      #0066aa
URxvt.color5:       #ebaaeb
URxvt.color13:      #aa66aa
URxvt.color6:       #00ebeb
URxvt.color14:      #00aaaa
URxvt.color7:       #ebebeb
URxvt.color15:      #fafafa

